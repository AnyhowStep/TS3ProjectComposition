{
    "compilerOptions": {
        "outDir": "../dist/project-a/src",
        "sourceMap": true,
        "declarationMap": true,
        "composite" : true,
        "rootDir": "./src",

        "experimentalDecorators": true,

        "allowJs": false,

        "allowUnreachableCode": false,
        "allowUnusedLabels": false,
        "alwaysStrict": true,

        "newLine": "lf",

        "noEmitOnError": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitUseStrict": false,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noErrorTruncation": true,

        "strict": true,

        "module": "commonjs",
        "moduleResolution": "node",
        "target": "ES6",
        "jsx": "react",
        "jsxFactory": "h",
    },
    "compileOnSave": false,

    "include": [
        "./src/**/*"
    ]
}
